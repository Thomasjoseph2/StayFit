{
    "extends": ["eslint:recommended", "plugin:react/recommended"],
    "parserOptions": {
      "ecmaVersion": 2021,
      "sourceType": "module"
    },
    "env": {
      "browser": true,
      "node": true,
      "es6": true
    },
    "plugins": ["react"],
    "settings": {
      "react": {
        "version": "detect"
      }
    },
    "rules": {
      "semi": ["error", "always"],
      "space-before-function-paren": ["error", "always"],
      "eqeqeq": ["error", "always"]
    },
    "overrides": [
      {
        "files": ["**/*.ts", "**/*.tsx"],
        "parserOptions": {
          "project": "./tsconfig.json"
        }
      }
    ]
  }
  